<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <UI>
      <Dialog Id="GitEx_TelemetryDlg" Width="370" Height="270" Title="!(loc.VerifyReadyDlg_Title)" TrackDiskSpace="yes">
        <Control Id="Back" Type="PushButton" X="177" Y="243" Width="56" Height="18" Text="!(loc.WixUIBack)"/>
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="18" Text="!(loc.WixUINext)"/>
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="18" Cancel="no" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="GitEx_CancelDlg">1</Publish>
        </Control>
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)"/>
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="2"/>
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="2"/>
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}Allow collect telemetry"/>
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="We would like to collect a little information how you use Git Extensions so we can make it better.\r\nWe won't collect any personal or identifiable information.\r\nYou can read what information we collect at https://github.com/gitextensions/gitextensions/PrivacyPolicy.md"/>
        <Control Id="LicenseText" Type="ScrollableText" X="20" Y="60" Width="330" Height="140" Sunken="yes" TabSkip="no">
          <!-- This is the original line -->
          <Text SourceFile="..\PrivacyPolicy.rtf" />
        </Control>
        <Control Id="TelemetryEnabledCheckbox" Type="CheckBox"  Text="{\WixUI_Font_Title}Allow telemetry" Property="TELEMETRY_ENABLED" Width="180" Height="15" X="88" Y="158" CheckBoxValue="1"/>
      </Dialog>
    </UI>
  </Fragment>
</Wix>